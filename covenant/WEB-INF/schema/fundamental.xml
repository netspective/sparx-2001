<?xml version="1.0"?>

<schema name="db">

    <table name="Project" abbrev="Prj" type="Default">
        <column name="id" type="auto-inc" size="10" primarykey="yes" descr="Unique id for Project"/>
        <column name="name" type="text"/>
        <column name="code" type="text"/>
        <column name="is_active" type="boolean" />
    </table>

    <table name="Member" abbrev="Mem" type="Default">
        <column name="id" type="text"  primarykey="yes" descr="Unique id for Member"/>
        <column name="password" type="text"/>
        <column name="name" type="text"/>
        <column name="is_administrator" type="boolean" />
        <column name="inactive_date" type="date" />
        <column name="project_manager" type="text"/>
    </table>

    <table name="Account" abbrev="Acc" type="Default">
        <column name="id" type="auto-inc"  primarykey="yes"/>
        <column name="name" type="text" />
    </table>

    <table name="Version" abbrev="Ver" type="Default">
        <column name="id" type="auto-inc" primarykey="yes" />
        <column name="project_id" lookupref="Project.id"/>
        <column name="version_number" type="text" />
        <column name="start_date" type="date" />
        <column name="end_date" type="date" />
    </table>

    <table name="Module" abbrev="Mod" type="Default">
        <column name="id" type="auto-inc" primarykey="yes" />
        <column name="project_id" lookupref="Project.id"/>
        <column name="description" type="text" />
        <column name="name" type="text" />
    </table>

</schema>