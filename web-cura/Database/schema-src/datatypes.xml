<?xml version="1.0"?>
<!DOCTYPE schema SYSTEM "../../../Framework/web-shared/resources/dtd/schema-markup.dtd">

<schema name="generic-datatypes">

	<datatype name="text">
		<sqldefn>varchar2(%size%)</sqldefn>
		<size>32</size>
	</datatype>

	<datatype name="float">
		<sqldefn>number(20,6)</sqldefn>
	</datatype>

	<datatype name="integer">
		<sqldefn>number(8)</sqldefn>
	</datatype>

	<datatype name="smallint">
		<sqldefn>number(4)</sqldefn>
	</datatype>

	<datatype name="longint">
		<sqldefn>number(16)</sqldefn>
	</datatype>

	<datatype name="boolean">
		<sqldefn>number(1)</sqldefn>
	</datatype>

	<datatype name="currency">
		<sqldefn>number(12,2)</sqldefn>
	</datatype>

	<datatype name="percentage">
		<sqldefn>number(5,2)</sqldefn>
	</datatype>

	<datatype name="lookup">
		<sqldefn>number(8)</sqldefn>
		<sqlwritefmt>$value$</sqlwritefmt>
	</datatype>

	<datatype name="date">
		<sqldefn>date</sqldefn>
	</datatype>

	<datatype name="stamp">
		<sqldefn>date</sqldefn>
	</datatype>

	<datatype name="time">
		<sqldefn>date</sqldefn>
	</datatype>

	<datatype name="autoinc" type="longint">
		<copytype>longint</copytype>
	</datatype>

	<datatype name="datablock">
		<sqldefn>clob</sqldefn>
	</datatype>

	<datatype name="email" type="text">
		<size>64</size>
	</datatype>

	<datatype name="duration">
		<composite>
			<column name="$name$_begin_date" type="date"/>
			<column name="$name$_end_date" type="date"/>
		</composite>
	</datatype>

	<datatype name="stamp_range">
		<composite>
			<column name="$name$_begin_stamp" type="stamp"/>
			<column name="$name$_end_stamp" type="stamp"/>
		</composite>
	</datatype>

</schema>
